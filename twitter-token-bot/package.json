{
  "name": "pumpfun-monitoring-system",
  "version": "1.0.0",
  "description": "Real-time PumpFun token monitoring system with Twitter engagement validation and comprehensive analysis",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "logs": "tail -f logs/app.log",
    "health": "node scripts/healthCheck.js",
    "config:validate": "node scripts/validateConfig.js",
    "db:setup": "node scripts/setupDatabase.js",
    "clean": "rm -rf logs/* temp/*"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "axios": "^1.6.0",
    "node-telegram-bot-api": "^0.64.0",
    "mongodb": "^6.2.0",
    "mongoose": "^8.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "p-limit": "^3.1.0",
    "bignumber.js": "^9.1.2",
    "user-agents": "^1.0.1293",
    "node-cache": "^5.1.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "cron": "^3.1.6",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "@types/node": "^20.8.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "pumpfun",
    "solana",
    "token-monitoring",
    "twitter-validation",
    "telegram-bot",
    "crypto-analysis",
    "bundle-detection",
    "wallet-analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pumpfun-monitoring-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/pumpfun-monitoring-system/issues"
  },
  "homepage": "https://github.com/yourusername/pumpfun-monitoring-system#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "logs/",
      "temp/"
    ]
  }
}